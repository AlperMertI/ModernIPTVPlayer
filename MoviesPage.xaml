<Page
    x:Class="ModernIPTVPlayer.MoviesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ModernIPTVPlayer"
    mc:Ignorable="d" 
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Categories -->
        <Border Grid.Column="0" Background="#202020" BorderBrush="#303030" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="FÄ°LMLER" FontSize="18" FontWeight="Bold" Margin="16" Foreground="White"/>
                <ListView x:Name="CategoryListView" Grid.Row="1" SelectionMode="Single" ItemClick="CategoryListView_ItemClick" IsItemClickEnabled="True">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:LiveCategory">
                            <TextBlock Text="{x:Bind CategoryName}" Margin="0,8"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="False" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Movies List -->
        <Grid Grid.Column="1" Background="#101010">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Filmler" FontSize="24" FontWeight="SemiBold" Margin="24,16" Foreground="White"/>

            <GridView x:Name="MovieGridView" Grid.Row="1" 
                      SelectionMode="Single" 
                      IsItemClickEnabled="True" 
                      ItemClick="MovieGridView_ItemClick"
                      Padding="24">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:LiveStream">
                        <Grid Width="160" Height="240" Margin="0,0,16,16" Background="#252525" CornerRadius="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Poster -->
                            <Image Source="{x:Bind StreamIcon}" Stretch="UniformToFill" VerticalAlignment="Center"/>
                            
                            <!-- Title Overlay -->
                            <Grid Grid.Row="1" Background="#CC000000" Padding="8">
                                <TextBlock Text="{x:Bind Name}" 
                                           TextWrapping="Wrap" 
                                           MaxLines="2" 
                                           FontSize="12" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center" 
                                           TextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            
            <ProgressRing x:Name="MovieLoadingRing" Grid.Row="1" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
