<Window
    x:Class="ModernIPTVPlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer" 
    xmlns:controls="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="#FF000000" PointerMoved="RootGrid_PointerMoved">

        <Grid x:Name="AppTitleBar"
              Height="48"
              VerticalAlignment="Top"
              Background="Transparent"
              Opacity="0"
              IsHitTestVisible="False"
              Canvas.ZIndex="9999"
              PointerEntered="AppTitleBar_PointerEntered"
              PointerExited="AppTitleBar_PointerExited">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Icon/Title -->
                <ColumnDefinition Width="*"/>    <!-- Drag Region -->
                <ColumnDefinition Width="Auto"/> <!-- System Buttons Placeholder -->
            </Grid.ColumnDefinitions>

            <!-- App Title / Icon Area - REMOVED -->

            <!-- Drag Region -->
            <Grid Grid.Column="1" Background="Transparent" IsHitTestVisible="True"/>
        </Grid>

        <Grid>
            <!-- Compact Glassmorphism Sidebar (Floats over content) -->
            <Grid x:Name="CustomNavContainer" 
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  Width="60"
                  Margin="16,0,0,0"
                  Canvas.ZIndex="1000"
                  PointerEntered="CustomNavContainer_PointerEntered"
                  PointerExited="CustomNavContainer_PointerExited">
            
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="SidebarTranslate" X="0"/>
                </Grid.RenderTransform>
            
                <!-- Glass Background with Border -->
                <Border x:Name="GlassBorder"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1"
                        CornerRadius="30">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#99000000" Offset="0"/>
                            <GradientStop Color="#66000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Grid x:Name="NavInnerGrid" Padding="0,12,0,12">
                    <!-- Liquid Lens Selection Indicator -->
                        <!-- Glass Lens Indicator -->
                        <Border x:Name="NavIndicator" 
                                Width="44" 
                                Height="44"
                                CornerRadius="22" 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0"
                                Opacity="0"
                                BorderBrush="#60FFFFFF"
                                BorderThickness="1"
                                Canvas.ZIndex="1">
                            <Border.Background>
                                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.75" RadiusY="0.75">
                                    <GradientStop Color="#20FFFFFF" Offset="0"/>
                                    <GradientStop Color="#05FFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                    <!-- Navigation List -->
                    <ScrollViewer x:Name="NavScrollViewer"
                                  VerticalScrollBarVisibility="Hidden" 
                                  HorizontalScrollBarVisibility="Disabled" 
                                  VerticalScrollMode="Enabled" 
                                  HorizontalScrollMode="Disabled">
                        <StackPanel x:Name="NavButtonsStack" 
                                    Orientation="Vertical" 
                                    Spacing="8">
                            
                            <RadioButton x:Name="BtnPlaylist" Content="Profil" Tag="LoginPage" 
                                         local:NavProperties.Icon="&#xE77B;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>
                            
                            <RadioButton x:Name="BtnWatchlist" Content="İzleme Listesi" Tag="WatchlistPage" 
                                         local:NavProperties.Icon="&#xE734;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>

                            <Rectangle Width="24" Height="1" Fill="#15FFFFFF" Margin="0,4" HorizontalAlignment="Center"/>

                            <RadioButton x:Name="BtnLive" Content="Canlı TV" Tag="LiveTVPage" 
                                         local:NavProperties.Icon="&#xE7F4;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>

                            <RadioButton x:Name="BtnMulti" Content="Çoklu Ekran" Tag="MultiPlayerPage" 
                                         local:NavProperties.Icon="&#xE74C;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>

                            <RadioButton x:Name="BtnMovies" Content="Filmler" Tag="MoviesPage" 
                                         local:NavProperties.Icon="&#xE8B2;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>

                            <RadioButton x:Name="BtnSeries" Content="Diziler" Tag="SeriesPage" 
                                         local:NavProperties.Icon="&#xE979;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>

                            <Rectangle Width="24" Height="1" Fill="#15FFFFFF" Margin="0,4" HorizontalAlignment="Center"/>

                            <RadioButton x:Name="BtnAddons" Content="Eklentiler" Tag="AddonsPage" 
                                         local:NavProperties.Icon="&#xECC8;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>


                            <RadioButton x:Name="BtnSettings" Content="Ayarlar" Tag="SettingsPage" 
                                         local:NavProperties.Icon="&#xE713;"
                                         Width="220"
                                         Style="{StaticResource SidebarPillRadioButtonStyle}" 
                                         Checked="NavButton_Checked"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>



            <Frame x:Name="ContentFrame" Margin="0" Navigated="ContentFrame_Navigated">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>

            <!-- Global Downloads Popup Panel -->
            <Border x:Name="GlobalDownloadPopup" 
                    Canvas.ZIndex="1000" 
                    Width="340"
                    MaxHeight="450"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,96,24,0" 
                    Visibility="Collapsed"
                    Background="#F0141414"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="12">
                <Border.Transitions>
                    <TransitionCollection>
                        <PopupThemeTransition FromHorizontalOffset="0" FromVerticalOffset="-20"/>
                    </TransitionCollection>
                </Border.Transitions>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Content -->
                    </Grid.RowDefinitions>
                    
                    <Grid Padding="16,12" BorderBrush="#1FFFFFFF" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="İndirmeler" FontSize="15" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="2">
                            <Button x:Name="PauseResumeAllButton" Click="TogglePauseResume_Click" Width="32" Height="32" Padding="0" Background="Transparent" BorderThickness="0" ToolTipService.ToolTip="Hepsini Duraklat">
                                 <FontIcon x:Name="PauseResumeIcon" Glyph="&#xE769;" FontSize="13" Foreground="#CCFFFFFF"/> 
                            </Button>
                            <Button Click="CancelAll_Click" Width="32" Height="32" Padding="0" Background="Transparent" BorderThickness="0" ToolTipService.ToolTip="Hepsini İptal Et">
                                 <FontIcon Glyph="&#xE74D;" FontSize="13" Foreground="#CCFFFFFF"/> 
                            </Button>
                            <Rectangle Width="1" Height="16" Fill="#22FFFFFF" Margin="4,0"/>
                            <Button x:Name="ClosePopupButton" 
                                    Click="ClosePopup_Click"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Width="32" Height="32"
                                    Padding="0"
                                    ToolTipService.ToolTip="Kapat">
                                <FontIcon Glyph="&#xE711;" FontSize="13" Foreground="#99FFFFFF"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="12">
                        <StackPanel x:Name="GlobalNotificationPanel" Spacing="10"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>