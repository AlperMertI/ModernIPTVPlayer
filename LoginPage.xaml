<Page
    x:Class="ModernIPTVPlayer.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ModernIPTVPlayer"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ThemeShadow x:Key="SharedShadow"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <LinearGradientBrush x:Key="PageBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <!-- Professional High-Density Gradient to eliminate banding -->
            <GradientStop Color="#FF080A0C" Offset="0.0"/>
            <GradientStop Color="#FF0B0E12" Offset="0.1"/>
            <GradientStop Color="#FF0E1218" Offset="0.2"/>
            <GradientStop Color="#FF11161E" Offset="0.3"/>
            <GradientStop Color="#FF141A24" Offset="0.4"/>
            <GradientStop Color="#FF151B26" Offset="0.5"/>
            <GradientStop Color="#FF141A24" Offset="0.6"/>
            <GradientStop Color="#FF11161E" Offset="0.7"/>
            <GradientStop Color="#FF0E1218" Offset="0.8"/>
            <GradientStop Color="#FF0B0E12" Offset="0.9"/>
            <GradientStop Color="#FF080A0C" Offset="1.0"/>
        </LinearGradientBrush>
        
        <Style x:Key="PlaylistCardStyle" TargetType="GridViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <ListViewItemPresenter 
                            ContentTransitions="{TemplateBinding ContentTransitions}"
                            SelectionCheckMarkVisualEnabled="False"
                            PointerOverBackground="{ThemeResource SubtleFillColorSecondaryBrush}"
                            SelectedBackground="{ThemeResource SubtleFillColorTertiaryBrush}"
                            PressedBackground="{ThemeResource SubtleFillColorTertiaryBrush}"
                            CornerRadius="14" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource PageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Header Area: Minimalist -->
        <Grid Padding="48,32,48,12">
            <!-- Title removed per user request -->

            <Button x:Name="AddPlaylistButton" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Click="AddPlaylistButton_Click" 
                    Style="{ThemeResource AccentButtonStyle}" Padding="16,8" CornerRadius="6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Add" Scale="1.0,1.0,1.0"/>
                    <TextBlock Text="Playlist Ekle" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Content Area: Responsive Grid -->
        <Grid Grid.Row="1" Margin="48,0,48,48">
            <GridView x:Name="PlaylistListView" 
                      SelectionMode="Single" 
                      IsItemClickEnabled="True"
                      ItemClick="PlaylistListView_ItemClick"
                      ItemContainerStyle="{StaticResource PlaylistCardStyle}"
                      Padding="0,0,0,24">
                
                <GridView.ItemContainerTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromVerticalOffset="300" IsStaggeringEnabled="True"/>
                    </TransitionCollection>
                </GridView.ItemContainerTransitions>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:Playlist">
                        <Border Width="300" Height="110"
                                Background="#1AFFFFFF" 
                                BorderThickness="1" BorderBrush="#1AFFFFFF"
                                CornerRadius="12" Padding="16">
                            <!-- High-end shadow and subtle border to pop out from smooth bg -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Smaller, simpler icon -->
                                <SymbolIcon Symbol="Video" Grid.RowSpan="2" VerticalAlignment="Top" Margin="0,4,12,0" 
                                            Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" Opacity="0.8"/>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="{x:Bind Name}" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{x:Bind Description}" FontSize="11" Opacity="0.4" MaxLines="1" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                                    <Border Background="{ThemeResource SystemFillColorSuccessBrush}" 
                                            Padding="6,2" CornerRadius="4" 
                                            Visibility="{x:Bind IsLastUsed, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                            Margin="0,0,4,0" VerticalAlignment="Center">
                                        <TextBlock Text="AKTİF" FontSize="9" FontWeight="Black" Foreground="White"/>
                                    </Border>
                                    
                                    <Button Style="{ThemeResource SubtleButtonStyle}" Click="EditPlaylist_Click" Tag="{x:Bind}" Width="36" Height="36" CornerRadius="18" Padding="0">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                    </Button>
                                    <Button Style="{ThemeResource SubtleButtonStyle}" Click="DeletePlaylist_Click" Tag="{x:Bind}" Width="36" Height="36" CornerRadius="18" Padding="0">
                                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="32" Visibility="Collapsed">
                <Border Width="140" Height="140" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="70">
                    <FontIcon Glyph="&#xEC50;" FontSize="56" Opacity="0.3"/>
                </Border>
                <StackPanel Spacing="12">
                    <TextBlock Text="Kütüphaneniz Boş" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Herhangi bir playlist eklemediniz. İzlemek için yeni bir playlist oluşturun." 
                               Style="{ThemeResource BodyTextBlockStyle}" Opacity="0.6" 
                               HorizontalAlignment="Center" TextAlignment="Center" MaxWidth="450"/>
                </StackPanel>
                <Button Content="Playlist Ekle" HorizontalAlignment="Center" Style="{ThemeResource AccentButtonStyle}" Padding="40,20" CornerRadius="10" Click="AddPlaylistButton_Click"/>
            </StackPanel>

            <!-- Loading Indicator Overlay -->
            <Grid x:Name="LoadingPanel" Visibility="Collapsed" Background="#D8000000" Canvas.ZIndex="1000" Margin="-64,-128,-64,-64">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="24">
                    <ProgressRing IsActive="True" Width="100" Height="100" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"/>
                    <TextBlock Text="Playlist Bilgileri Alınıyor..." FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
