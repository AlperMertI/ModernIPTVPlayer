                        </ListView.ItemTemplate>
                    </ListView>

                    <ListView x:Name="NarrowSourcesListView" SelectionMode="None" 
                               IsItemClickEnabled="True" ItemClick="SourcesListView_ItemClick" 
                               ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Enabled"
                               Padding="20,0,20,20">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid CornerRadius="12" Background="#1AFFFFFF" Margin="0,0,0,12" Padding="16">
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="Auto"/>
                                         <ColumnDefinition Width="*"/>
                                     </Grid.ColumnDefinitions>
                                     <Border Grid.Column="0" Background="#22000000" BorderBrush="{StaticResource GoldGradient}" BorderThickness="1" CornerRadius="8" Padding="8,4" Margin="0,0,12,0" VerticalAlignment="Top" MinWidth="60">
                                         <TextBlock Text="{Binding ProviderText}" FontSize="10" FontWeight="Black" Foreground="{StaticResource GoldGradient}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxLines="1"/>
                                     </Border>
                                     <StackPanel Grid.Column="1" Spacing="6">
                                          <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" Foreground="White" TextWrapping="Wrap" MaxLines="3"/>
                                          
                                          <StackPanel Orientation="Horizontal" Spacing="6">
                                              <!-- Quality -->
                                              <Border Background="#26FFFFFF" CornerRadius="4" Padding="4,1" Visibility="{Binding HasQuality, Converter={StaticResource BoolToVis}}">
                                                  <TextBlock Text="{Binding Quality}" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                              </Border>
                                              <!-- Size -->
                                              <Border Background="#1AFFFFFF" CornerRadius="4" Padding="4,1" Visibility="{Binding HasSize, Converter={StaticResource BoolToVis}}">
                                                  <TextBlock Text="{Binding Size}" FontSize="9" FontWeight="Bold" Foreground="#AAA"/>
                                              </Border>
                                              <!-- Cached Badge -->
                                              <Border Background="#1A00FF88" CornerRadius="4" Padding="4,1" Visibility="{Binding IsCached, Converter={StaticResource BoolToVis}}" BorderBrush="#3300FF88" BorderThickness="1">
                                                  <TextBlock Text="⚡ CACHED" FontSize="8" FontWeight="Black" Foreground="#FF00FF88"/>
                                              </Border>
                                          </StackPanel>
                                          
                                          <TextBlock Text="{Binding Name}" FontSize="11" Foreground="#888" Opacity="0.9" TextWrapping="Wrap" MaxLines="3"/>
                                     </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                
                <StackPanel x:Name="NarrowCastSection" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                             Visibility="Collapsed" Spacing="12" Margin="0,4,0,0">
                    <TextBlock Text="Oyuncular" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                    <ListView x:Name="NarrowCastListView" 
                              Height="150"
                              ScrollViewer.HorizontalScrollMode="Enabled" 
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ScrollViewer.VerticalScrollMode="Disabled" 
                              SelectionMode="None">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="90" Margin="0,0,16,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="110"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border CornerRadius="8" Height="110" Width="90">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding FullProfileUrl}" Stretch="UniformToFill"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Grid.Row="1" Text="{Binding Name}" FontSize="10" FontWeight="SemiBold" 
                                               Foreground="White" TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                                    <TextBlock Grid.Row="2" Text="{Binding Character}" FontSize="9" 
                                               Foreground="#AAA" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                
            </Grid>
        </ScrollViewer>
        </Grid>

        <!-- 3. INSTANT PLAYER OVERLAY -->
        <!-- 3. INSTANT PLAYER OVERLAY -->
        <Grid x:Name="PlayerOverlayContainer" Visibility="Collapsed" Background="Black" IsHitTestVisible="False">
             <ContentControl x:Name="PlayerHost" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                 <mpv:MpvPlayer x:Name="MediaInfoPlayer" 
                               Opacity="0"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Stretch"/>
             </ContentControl>
        </Grid>

        <!-- 3. STICKY GLASS HEADER -->
        <Grid x:Name="StickyHeader" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="80" 
              Opacity="0" IsHitTestVisible="False" Canvas.ZIndex="100">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="StickyHeaderTranslate" Y="-80"/>
            </Grid.RenderTransform>
            
            <!-- Glass Effect -->
            <Border Background="#CC0D0D0D" BorderBrush="#1AFFFFFF" BorderThickness="0,0,0,1">
                <Grid Margin="100,0,40,0">
                    <TextBlock x:Name="StickyTitle" Text="" 
                               VerticalAlignment="Center" Margin="0,0,200,0"
                               FontSize="18" FontWeight="SemiBold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                     
                      <Button x:Name="StickyPlayButton" Click="PlayButton_Click" HorizontalAlignment="Right" VerticalAlignment="Center"
                              Style="{StaticResource HeroPlayButtonStyle}" Height="40" Padding="20,0" CornerRadius="20" BorderBrush="#40FFFFFF">
                          <StackPanel Orientation="Horizontal" Spacing="8">
                               <FontIcon x:Name="StickyPlayButtonIcon" Glyph="&#xF5B0;" FontSize="14" VerticalAlignment="Center"/>
                              <StackPanel VerticalAlignment="Center">
                                  <TextBlock x:Name="StickyPlayButtonText" Text="Oynat" FontSize="13" FontWeight="SemiBold"/>
                                  <TextBlock x:Name="StickyPlayButtonSubtext" Text="" FontSize="9" Opacity="0.6" Visibility="Collapsed" Margin="0,-2,0,0"/>
                              </StackPanel>
                          </StackPanel>
                      </Button>
                </Grid>
            </Border>
        </Grid>

        </Grid> <!-- End of MainContentWrapper -->


        <!-- 5. FEEDBACK & NOTIFICATIONS -->
        <TeachingTip x:Name="CopyFeedbackTip"
                     Title="Bağlantı Kopyalandı"
                     Subtitle="Yayın adresi panoya kaydedildi. Harici oynatıcılarda kullanabilirsiniz."
                     PreferredPlacement="Bottom"
                     PlacementMargin="20"
                     IsLightDismissEnabled="True">
            <TeachingTip.IconSource>
                <SymbolIconSource Symbol="Link"/>
            </TeachingTip.IconSource>
        </TeachingTip>

        <!-- Global Download / Notification Panel -->
        <StackPanel x:Name="NotificationPanel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,40,40" Spacing="10">
            <!-- Dynamic Download Cards will be added here -->
        </StackPanel>

        <!-- 10. TRAILER OVERLAY -->
        <!-- 10. TRAILER OVERLAY -->
        <Grid x:Name="TrailerOverlay" Visibility="Collapsed" Canvas.ZIndex="2000" 
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#01000000" Margin="-16"
              Grid.RowSpan="99" Grid.ColumnSpan="99">
            <Grid x:Name="TrailerScrim" Background="#FF000000" Opacity="0" Margin="-16"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  PointerPressed="TrailerScrim_PointerPressed"/>

            <!-- Close Button - positioned outside TrailerContent to avoid fullscreen issues -->
            <Button x:Name="CloseTrailerButton" Click="CloseTrailerButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="16,16,16,0" Style="{StaticResource GlassButtonStyle}" Width="40" Height="40" Padding="0" CornerRadius="20">
                <FontIcon Glyph="&#xE711;" FontSize="14"/>
            </Button>

            <Grid x:Name="TrailerContent" Width="1000" Height="562" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <CompositeTransform x:Name="TrailerTransform" ScaleX="0.1" ScaleY="0.1"/>
                </Grid.RenderTransform>
                
                <Border CornerRadius="12" Background="Black" BorderBrush="#33FFFFFF" BorderThickness="1">
                    <muxc:WebView2 x:Name="TrailerWebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible" Opacity="0"/>
                </Border>

                <!-- Loading State -->
                <ProgressRing x:Name="TrailerLoadingRing" IsActive="True" Width="48" Height="48" Foreground="White" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
