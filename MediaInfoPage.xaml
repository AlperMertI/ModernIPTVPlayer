<Page
    x:Class="ModernIPTVPlayer.MediaInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animated="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctl="using:ModernIPTVPlayer.Controls"
    xmlns:mpv="using:MpvWinUI"
    mc:Ignorable="d"
    Background="#0D0D0D">

    <Page.Resources>
        <local:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:StringToImageSourceConverter x:Key="StringToImage"/>
        <local:BooleanInverseToVisibilityConverter x:Key="BoolInverseToVis"/>
        <local:StringToVisibilityConverter x:Key="StringToVis"/>
        <!-- Premium Glass Button Style -->
        <!-- Premium Glass Button Style -->
        <Style x:Key="GlassButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#25FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="Transparent" RenderTransformOrigin="0.5,0.5">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0.15" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleX" To="0.96" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ContentScale" Storyboard.TargetProperty="ScaleY" To="0.96" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="{TemplateBinding CornerRadius}">
                                <Grid>
                                    <Border x:Name="HoverOverlay" Background="White" Opacity="0" CornerRadius="{TemplateBinding CornerRadius}"/>
                                    <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter.RenderTransform>
                                            <CompositeTransform x:Name="ContentScale"/>
                                        </ContentPresenter.RenderTransform>
                                    </ContentPresenter>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hero Play Button Style -->
        <Style x:Key="HeroPlayButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
            <Setter Property="Background" Value="#EEFFFFFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Vortex Navigation Style -->
        <Style x:Key="VortexButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="IconRotation" Storyboard.TargetProperty="Rotation" To="360" Duration="0:0:0.6">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0.12" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="0.9" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="0.9" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="RootBorder" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Border x:Name="HoverOverlay" Background="White" Opacity="0" CornerRadius="{TemplateBinding CornerRadius}"/>
                                    <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter.RenderTransform>
                                            <CompositeTransform x:Name="IconRotation" CenterX="10" CenterY="10"/>
                                        </ContentPresenter.RenderTransform>
                                    </ContentPresenter>
                                </Grid>
                            </Border>
                            <Grid.RenderTransform>
                                <CompositeTransform x:Name="RootScale"/>
                            </Grid.RenderTransform>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Tech Badge Styles -->
        <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD700" Offset="0"/>
            <GradientStop Color="#DAA520" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SilverGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E0E0E0" Offset="0"/>
            <GradientStop Color="#A0A0A0" Offset="1"/>
        </LinearGradientBrush>


    </Page.Resources>

    <Grid x:Name="RootGrid">

        
        <!-- 1. CINEMATIC BACKGROUND -->
        <Grid x:Name="HeroContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="HeroImage2" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>
            <Image x:Name="HeroImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>
            

            <!-- Readability Scrim (Softened) -->
            <Rectangle x:Name="LocalInfoGradient" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1400" 
                       Opacity="0" IsHitTestVisible="False" Margin="-50,0,0,-50">
                <Rectangle.Fill>
                    <RadialGradientBrush Center="0,1" GradientOrigin="0,1" RadiusX="1.2" RadiusY="1.2">
                        <GradientStop Color="#99000000" Offset="0"/> 
                        <GradientStop Color="#44000000" Offset="0.35"/>
                        <GradientStop Color="#00000000" Offset="0.7"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Bottom Blend (Smoother transition to page content) -->
            <Rectangle Height="400" VerticalAlignment="Bottom" IsHitTestVisible="False">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#000D0D0D" Offset="0"/>
                        <GradientStop Color="#880D0D0D" Offset="0.5"/>
                        <GradientStop Color="#FF0D0D0D" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- 0. BACK BUTTON (Vortex Style) -->
        <Button x:Name="BackButton" 
                Click="BackButton_Click"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Margin="48,48,0,0" 
                Style="{StaticResource VortexButtonStyle}"
                Width="48" Height="48"
                Canvas.ZIndex="1000">
            <AnimatedIcon x:Name="BackIconVisual" Width="20" Height="20">
                <AnimatedIcon.Source>
                    <animated:AnimatedBackVisualSource/>
                </AnimatedIcon.Source>
                <AnimatedIcon.FallbackIconSource>
                    <SymbolIconSource Symbol="Back"/>
                </AnimatedIcon.FallbackIconSource>
            </AnimatedIcon>
        </Button>

        <!-- 2. MAIN CONTENT WRAPPER -->
        <Grid x:Name="MainContentWrapper" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0">
            <Grid.RenderTransform>
                <CompositeTransform x:Name="MainContentTransform"/>
            </Grid.RenderTransform>
            
            <Grid x:Name="LayoutRoot" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ScrollViewer x:Name="RootScrollViewer" 
                          VerticalScrollBarVisibility="Disabled" 
                          VerticalScrollMode="Disabled" 
                          HorizontalScrollMode="Disabled" 
                          VerticalContentAlignment="Stretch">
            
        <Grid x:Name="ContentGrid" Padding="60,0,20,60" VerticalAlignment="Stretch">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <!-- Sync threshold with C# logic (900px) -->
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Aggressively lock the root scroller -->
                        <Setter Target="RootScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                        <Setter Target="RootScrollViewer.VerticalScrollMode" Value="Disabled"/>
                        <Setter Target="RootScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                        <Setter Target="RootScrollViewer.IsVerticalScrollChainingEnabled" Value="False"/>
                        
                        <!-- Force content to stay within viewport bounds -->
                        <Setter Target="Row0.Height" Value="*"/>
                        <Setter Target="ContentGrid.RowDefinitions[1].Height" Value="0"/>
                        <Setter Target="ContentGrid.RowDefinitions[2].Height" Value="0"/>
                        <Setter Target="ContentGrid.VerticalAlignment" Value="Stretch"/>
                        <Setter Target="ContentGrid.Padding" Value="60,0,20,0"/>
                        <Setter Target="TitleText.FontSize" Value="48"/>
                        
                        <Setter Target="InfoContainer.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="InfoContainer.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="InfoColumn.Margin" Value="0,0,40,40"/>
                        
                        <Setter Target="EpisodesPanel.VerticalAlignment" Value="Center"/>
                        <Setter Target="EpisodesPanel.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="EpisodesPanel.HorizontalAlignment" Value="Right"/>
                        
                        <!-- Collapse Narrow Sections in Wide Mode -->
                        <Setter Target="NarrowEpisodesSection.Visibility" Value="Collapsed"/>
                        <Setter Target="NarrowSourcesSection.Visibility" Value="Collapsed"/>
                        <Setter Target="NarrowCastSection.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Enable scrolling only for Narrow mode -->
                        <Setter Target="RootScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                        <Setter Target="RootScrollViewer.VerticalScrollMode" Value="Auto"/>
                        
                        <Setter Target="Row0.Height" Value="Auto"/>
                        <Setter Target="ContentGrid.Padding" Value="20,120,20,40"/>
                        <Setter Target="TitleText.FontSize" Value="28"/>
                        
                        <Setter Target="InfoContainer.VerticalAlignment" Value="Top"/>
                        <Setter Target="InfoContainer.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="InfoContainer.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="InfoColumn.Margin" Value="0,0,0,20"/>
                        
                        <!-- Collapse Wide Panels in Narrow Mode -->
                        <Setter Target="EpisodesPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="SourcesPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="SourcesShimmerPanel.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row0" Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- LEFT: INFO PANEL -->
        <!-- SKELETON LOADER -->
        <!-- LEFT: INFO PANEL -->
        <!-- LEFT: INFO PANEL -->
        <Grid x:Name="InfoContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Padding="0">
            

            <StackPanel x:Name="InfoColumn" Spacing="4" Visibility="Visible" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,40"> 
                 
                 <!-- BADGES & METADATA -->
                  <StackPanel Orientation="Horizontal" Spacing="0" VerticalAlignment="Center" Margin="2,0,0,0">
                      <!-- 1. Technical Section (Dynamic: Shimmer or Badges) -->
                       <Grid x:Name="TechBadgeSection" Visibility="Collapsed">
                           <StackPanel x:Name="TechBadgesContent" Orientation="Horizontal" Spacing="8" Opacity="0" Visibility="Collapsed">
                             <Border x:Name="Badge4K" Visibility="Collapsed" BorderBrush="{StaticResource GoldGradient}" BorderThickness="1.5" CornerRadius="4" Padding="6,2" Background="#44000000">
                                 <TextBlock Text="4K UHD" FontSize="11" FontWeight="Bold" Foreground="{StaticResource GoldGradient}"/>
                             </Border>
                             <Border x:Name="BadgeRes" Visibility="Collapsed" BorderBrush="#66FFFFFF" BorderThickness="1" CornerRadius="4" Padding="6,2">
                                 <TextBlock x:Name="BadgeResText" Text="1080P" FontSize="11" Foreground="#CCC"/>
                             </Border>
                             <Border x:Name="BadgeHDR" Visibility="Collapsed" BorderBrush="{StaticResource SilverGradient}" BorderThickness="1.5" CornerRadius="4" Padding="6,2" Background="#44000000">
                                 <TextBlock Text="HDR" FontSize="11" FontWeight="Bold" Foreground="{StaticResource SilverGradient}"/>
                             </Border>
                             <Border x:Name="BadgeSDR" Visibility="Collapsed" BorderBrush="#66FFFFFF" BorderThickness="1" CornerRadius="4" Padding="6,2">
                                 <TextBlock Text="SDR" FontSize="11" Foreground="#CCC"/>
                             </Border>
                             <Border x:Name="BadgeCodecContainer" Visibility="Collapsed" BorderBrush="#66FFFFFF" BorderThickness="1" CornerRadius="4" Padding="6,2">
                                 <TextBlock x:Name="BadgeCodec" Text="HEVC" FontSize="11" Foreground="#CCC"/>
                             </Border>
                          </StackPanel>

                          <StackPanel x:Name="MetadataShimmer" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                              <ctl:ShimmerControl Width="50" Height="22" CornerRadius="4"/>
                              <ctl:ShimmerControl Width="35" Height="22" CornerRadius="4"/>
                              <ctl:ShimmerControl Width="40" Height="22" CornerRadius="4"/>
                          </StackPanel>
                      </Grid>

                      <!-- 2. Steady Section (Year, Runtime) -->
                      <StackPanel x:Name="MetadataPanel" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Opacity="0">
                         <TextBlock x:Name="RuntimeText" Text="" Foreground="#BBB" FontSize="14"/>
                         <TextBlock x:Name="YearText" Text="" Foreground="#BBB" FontSize="14"/>
                      </StackPanel>
                  </StackPanel>

                 <!-- TITLE -->
                 <Grid>
                     <StackPanel x:Name="TitlePanel" Opacity="0">
                         <TextBlock x:Name="SuperTitleText" Text="" FontSize="16" FontWeight="SemiBold" Visibility="Collapsed"
                                    Foreground="{StaticResource GoldGradient}" Opacity="0.8" Margin="2,0,0,-4"
                                    CharacterSpacing="100"/>
                         <TextBlock x:Name="TitleText" Text="Loading..." FontSize="48" FontWeight="Bold" 
                                    TextWrapping="Wrap" Foreground="White" LineHeight="56">
                            <TextBlock.Shadow>
                                <ThemeShadow/>
                            </TextBlock.Shadow>
                        </TextBlock>
                     </StackPanel>
                    
                    <ctl:ShimmerControl x:Name="TitleShimmer" Width="500" Height="56" CornerRadius="8" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                 </Grid>

                <!-- ACTION BAR -->
                <Grid>
                    <StackPanel x:Name="ActionBarPanel" Orientation="Horizontal" Spacing="16" Opacity="0">
                         <Button x:Name="PlayButton" Click="PlayButton_Click" Height="52" CornerRadius="26" Style="{StaticResource HeroPlayButtonStyle}"
                                 Padding="32,0" ToolTipService.ToolTip="Oynat (Enter)">
                             <StackPanel Orientation="Horizontal" Spacing="12">
                                 <FontIcon x:Name="PlayButtonIcon" Glyph="&#xF5B0;" FontSize="18"/>
                                 <StackPanel>
                                     <TextBlock x:Name="PlayButtonText" Text="Oynat" FontWeight="Bold" FontSize="16"/>
                                     <TextBlock x:Name="PlayButtonSubtext" Text="" FontSize="11" Opacity="0.6" Visibility="Collapsed"/>
                                 </StackPanel>
                             </StackPanel>
                         </Button>

                         <Button x:Name="RestartButton" Click="RestartButton_Click" Visibility="Collapsed"
                                 Style="{StaticResource GlassButtonStyle}" Height="52" CornerRadius="26" Padding="32,0">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                 <FontIcon Glyph="&#xE777;" FontSize="16"/>
                                 <TextBlock Text="Baştan Başla" FontSize="14" FontWeight="SemiBold"/>
                             </StackPanel>
                         </Button>
    
                         <Button x:Name="TrailerButton" Click="TrailerButton_Click" Style="{StaticResource GlassButtonStyle}" Width="52" Height="52" CornerRadius="26" Padding="0">
                             <FontIcon Glyph="&#xE714;" FontSize="20"/>
                         </Button>
                         <Button x:Name="DownloadButton" Click="DownloadButton_Click" Style="{StaticResource GlassButtonStyle}" Height="52" Width="52" Padding="0" ToolTipService.ToolTip="İndir">
                             <FontIcon Glyph="&#xEBD3;" FontSize="20"/>
                         </Button>
                         <Button x:Name="CopyLinkButton" Click="CopyLinkButton_Click" Style="{StaticResource GlassButtonStyle}" Width="52" Height="52" CornerRadius="26" Padding="0">
                             <FontIcon Glyph="&#xE71B;" FontSize="18"/>
                         </Button>
                         <Button x:Name="WatchlistButton" Click="WatchlistButton_Click" Style="{StaticResource GlassButtonStyle}" Width="52" Height="52" CornerRadius="26" Padding="0" ToolTipService.ToolTip="İzleme Listesine Ekle">
                             <FontIcon Glyph="&#xE710;" FontSize="20"/>
                         </Button>
                    </StackPanel>
                    
                    <!-- Shimmer -->
                    <StackPanel x:Name="ActionBarShimmer" Orientation="Horizontal" Spacing="16">
                        <ctl:ShimmerControl Width="140" Height="52" CornerRadius="26" HorizontalAlignment="Left"/>
                        <ctl:ShimmerControl Width="52" Height="52" CornerRadius="26" HorizontalAlignment="Left"/>
                        <ctl:ShimmerControl Width="52" Height="52" CornerRadius="26" HorizontalAlignment="Left"/>
                         <ctl:ShimmerControl Width="52" Height="52" CornerRadius="26" HorizontalAlignment="Left"/>
                         <ctl:ShimmerControl Width="52" Height="52" CornerRadius="26" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                 <!-- GENRES & OVERVIEW -->
                 <Grid>
                     <StackPanel x:Name="OverviewPanel" Spacing="0" Opacity="0">
                         <TextBlock x:Name="GenresText" Text="" Foreground="#AAA" FontSize="16" Margin="0,0,0,4"/>
                         <TextBlock x:Name="OverviewText" Text="" FontSize="16" Foreground="#E0E0E0" 
                                   TextWrapping="Wrap" MaxLines="6" TextTrimming="CharacterEllipsis" LineHeight="26"/>
                     </StackPanel>
                     
                     <StackPanel x:Name="OverviewShimmer" Spacing="6" HorizontalAlignment="Left">
                        <ctl:ShimmerControl Width="250" Height="22" CornerRadius="4" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                        <ctl:ShimmerControl Width="650" Height="20" CornerRadius="4" HorizontalAlignment="Left"/>
                        <ctl:ShimmerControl Width="620" Height="20" CornerRadius="4" HorizontalAlignment="Left"/>
                        <ctl:ShimmerControl Width="580" Height="20" CornerRadius="4" HorizontalAlignment="Left"/>
                     </StackPanel>
                 </Grid>
            
                <!-- CAST SECTION -->
                <Grid>
                    <StackPanel x:Name="CastSection" Spacing="12" Visibility="Collapsed" Margin="0,8,0,0" Opacity="0">
                        <TextBlock Text="Oyuncular" FontSize="18" FontWeight="SemiBold" Foreground="#DDD"/>
                        <ListView x:Name="CastListView" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  ScrollViewer.VerticalScrollMode="Disabled" SelectionMode="None">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="16"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="110">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Profile Image or Placeholder -->
                                        <Border CornerRadius="8" Height="140" Width="110" Background="#1AFFFFFF">
                                            <Grid>
                                                <!-- Fallback Icon if Image is missing -->
                                                <FontIcon Glyph="&#xE77B;" FontSize="40" Foreground="#33FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <!-- Image -->
                                                <Image Source="{Binding FullProfileUrl}" Stretch="UniformToFill"/>
                                            </Grid>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1" Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" Foreground="White" TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                                        <TextBlock Grid.Row="2" Text="{Binding Character}" FontSize="11" Foreground="#AAA" TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    
                    <!-- Cast Shimmer -->
                    <StackPanel x:Name="CastShimmer" Spacing="12" Margin="0,8,0,0" HorizontalAlignment="Left"> 
                        <ctl:ShimmerControl Width="120" Height="24" CornerRadius="4" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <StackPanel Spacing="8">
                                <ctl:ShimmerControl Width="110" Height="140" CornerRadius="8" HorizontalAlignment="Left"/>
                                <ctl:ShimmerControl Width="110" Height="15" CornerRadius="4" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Spacing="8">
                                <ctl:ShimmerControl Width="110" Height="140" CornerRadius="8" HorizontalAlignment="Left"/>
                                <ctl:ShimmerControl Width="110" Height="15" CornerRadius="4" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Spacing="8">
                                <ctl:ShimmerControl Width="110" Height="140" CornerRadius="8" HorizontalAlignment="Left"/>
                                <ctl:ShimmerControl Width="110" Height="15" CornerRadius="4" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Spacing="8">
                                <ctl:ShimmerControl Width="110" Height="140" CornerRadius="8" HorizontalAlignment="Left"/>
                                <ctl:ShimmerControl Width="110" Height="15" CornerRadius="4" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Grid>
    
                    <!-- RIGHT: SERIES EPISODES -->
                    <Grid x:Name="EpisodesPanel" Grid.Column="1" Grid.Row="0" Width="450" MaxWidth="600" Visibility="Collapsed" CornerRadius="20" Margin="40,0,0,0" VerticalAlignment="Center">
                         <!-- Premium Glass Background -->
                         <Border CornerRadius="20" BorderBrush="#1AFFFFFF" BorderThickness="1">
                             <Border.Background>
                                 <SolidColorBrush Color="Black" Opacity="0.5"/>
                             </Border.Background>
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="*"/>
                                 </Grid.RowDefinitions>
                                 
                                 <Grid Padding="24,20">
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="Auto"/>
                                     </Grid.ColumnDefinitions>
                                     <TextBlock Text="Bölümler" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                     <ComboBox x:Name="SeasonComboBox" Grid.Column="1" SelectionChanged="SeasonComboBox_SelectionChanged" MinWidth="140"
                                               CornerRadius="18" Background="#22FFFFFF" DisplayMemberPath="Name" Foreground="White"/>
                                 </Grid>
                
                                 <ListView x:Name="EpisodesListView" Grid.Row="1" SelectionMode="Single" 
                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                                           ScrollViewer.VerticalScrollMode="Enabled"
                                           SelectionChanged="EpisodesListView_SelectionChanged" Padding="16,0,16,20">
                                     <ListView.ItemContainerStyle>
                                         <Style TargetType="ListViewItem">
                                             <Setter Property="Padding" Value="0"/>
                                             <Setter Property="Margin" Value="0,6"/>
                                             <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                             <Setter Property="CornerRadius" Value="8"/>
                                         </Style>
                                     </ListView.ItemContainerStyle>
                                     <ListView.ItemTemplate>
                                         <DataTemplate x:DataType="local:EpisodeItem">
                                             <Grid Height="Auto" Background="Transparent" Padding="0,4" CornerRadius="8">
                                                 <Grid.ContextFlyout>
                                                     <MenuFlyout>
                                                         <MenuFlyoutItem Text="İzlendi Olarak İşaretle" Click="MarkWatched_Click" Tag="{x:Bind}"/>
                                                         <MenuFlyoutItem Text="İzlenmedi Olarak İşaretle" Click="MarkUnwatched_Click" Tag="{x:Bind}"/>
                                                     </MenuFlyout>
