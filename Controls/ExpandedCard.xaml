<UserControl
    x:Class="ModernIPTVPlayer.Controls.ExpandedCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="320" Height="420">

    <UserControl.Resources>
        <!-- Modern Shimmer Brush Style -->
        <Style x:Key="ShimmerBoxStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush x:Name="ShimmerBrush" StartPoint="-1,0" EndPoint="2,0">
                        <GradientStop Color="#0DFFFFFF" Offset="0"/>
                        <GradientStop Color="#1AFFFFFF" Offset="0.5"/>
                        <GradientStop Color="#0DFFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Storyboard x:Name="ShimmerStoryboard" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ShimmerTitle" Storyboard.TargetProperty="(Shape.Fill).(LinearGradientBrush.Transform).(TranslateTransform.X)">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="-1"/>
            </DoubleAnimationUsingKeyFrames>
            <!-- Note: Animating Start/End points or translation of local brushes is cleaner per item -->
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" CornerRadius="12" Background="#161616" BorderBrush="#2AFFFFFF" BorderThickness="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/> <!-- Reduced further to 160 to maximize text area -->
            <RowDefinition Height="*"/>   <!-- Info Area -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- 1. BACKDROP & VIDEO -->
        <Grid x:Name="TrailerArea" Grid.Row="0" Background="#000" 
              Tapped="TrailerArea_Tapped">
            <Grid x:Name="BackdropContainer">
                <Image x:Name="BackdropImage" Stretch="UniformToFill" Opacity="0.7"/>
                <Rectangle x:Name="BackdropOverlay">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#161616" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
            
            <WebView2 x:Name="TrailerWebView" Visibility="Collapsed" DefaultBackgroundColor="Black" IsHitTestVisible="False"/>
            
            <Button x:Name="MuteButton" 
                    Click="MuteButton_Click"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Margin="8,0,0,8"
                    Width="32" Height="32"
                    CornerRadius="16"
                    Background="#66000000"
                    BorderThickness="0"
                    Padding="0"
                    Visibility="Collapsed">
                <FontIcon x:Name="MuteIcon" Glyph="&#xE74F;" FontSize="14" Foreground="White"/>
            </Button>

            <Button x:Name="ExpandButton" 
                    Click="ExpandButton_Click"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,8,8"
                    Width="32" Height="32"
                    CornerRadius="16"
                    Background="#66000000"
                    BorderThickness="0"
                    Padding="0"
                    Visibility="Collapsed">
                <FontIcon Glyph="&#xE740;" FontSize="14" Foreground="White"/>
            </Button>
            
            <ProgressRing x:Name="LoadingRing" IsActive="False" Visibility="Collapsed" Foreground="White" Width="24" Height="24"/>
        </Grid>

        <!-- 2. INFO AREA -->
        <Grid Grid.Row="1">
            <!-- Real Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                <StackPanel x:Name="RealContentPanel" Padding="16,10,16,10" Spacing="4" Tapped="DetailsArea_Tapped" Background="Transparent" Opacity="0">
                    <TextBlock x:Name="TitleText" Text="Movie Title" 
                               Style="{StaticResource TitleTextBlockStyle}" 
                               FontSize="19" FontWeight="Bold" TextTrimming="CharacterEllipsis" Margin="0,0,0,2"/>

                    <Grid>
                        <!-- Badge Skeleton (Visible during Probe) -->
                        <StackPanel x:Name="BadgeSkeleton" Orientation="Horizontal" Spacing="6" Height="22" VerticalAlignment="Center" Visibility="Collapsed">
                             <Grid Width="36" Height="16"><local:ShimmerControl/></Grid>
                             <Grid Width="42" Height="16"><local:ShimmerControl/></Grid>
                             <Grid Width="32" Height="16"><local:ShimmerControl/></Grid>
                        </StackPanel>

                        <!-- Real Badges (Visible after Probe) -->
                        <StackPanel x:Name="TechBadgesPanel" Orientation="Horizontal" Spacing="6" Height="22" VerticalAlignment="Center" Visibility="Collapsed"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2">
                        <Border x:Name="MoodTag" Background="#FF009900" CornerRadius="4" Padding="6,2" Visibility="Collapsed">
                            <TextBlock x:Name="MoodText" Text="98% Match" FontSize="11" FontWeight="Bold"/>
                        </Border>
                        <TextBlock x:Name="RatingText" Text="&#x2605; 8.5" Foreground="#FFCC00" FontSize="13" VerticalAlignment="Center"/>
                        <TextBlock x:Name="YearText" Text="2024" Foreground="#88FFFFFF" FontSize="13" VerticalAlignment="Center"/>
                        
                        <!-- Progress Info (Hidden as it is now in the Play Button) -->
                        <StackPanel x:Name="ProgressPanel" Orientation="Horizontal" Spacing="8" Visibility="Collapsed" VerticalAlignment="Center" Margin="4,0,0,0">
                            <TextBlock x:Name="TimeLeftText" Text="45 dk kaldÄ±" Foreground="#AABBBBBB" FontSize="11" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock x:Name="GenresText" Text="" Foreground="#77FFFFFF" FontSize="12" Margin="0,0,0,4"/>
                    
                    <TextBlock x:Name="DescText" 
                               Text="Details..." 
                               Foreground="#AABBBBBB" 
                               FontSize="12.5" 
                               TextWrapping="Wrap" 
                               LineHeight="18"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Advanced Per-Item Skeleton Loader -->
            <!-- Main Content Skeleton (Title, Desc, etc.) -->
            <StackPanel x:Name="MainSkeleton" Padding="16,10,16,0" Spacing="12">
                <!-- Title Skeleton -->
                <Grid Width="200" Height="24" HorizontalAlignment="Left">
                     <local:ShimmerControl/>
                </Grid>
                
                <!-- Spacer for Badge Area is no longer needed in skeleton as it's part of content flow now 
                     Actually we need it to push the Info/Desc down if we want MainSkeleton to match content shape
                     But since we moved BadgeSkeleton out of MainSkeleton logic, MainSkeleton represents the 'rest' 
                     Let's keep a small spacer or better yet, make MainSkeleton less tall at top -->
                <Grid Height="0"/>
                
                <!-- Info Skeleton -->
                <Grid Width="120" Height="14" HorizontalAlignment="Left"><local:ShimmerControl/></Grid>
                
                <!-- Description Lines -->
                <StackPanel Spacing="8" Margin="0,10,0,0">
                    <Grid Height="10" Width="270"><local:ShimmerControl/></Grid>
                    <Grid Height="10" Width="250"><local:ShimmerControl/></Grid>
                    <Grid Height="10" Width="260"><local:ShimmerControl/></Grid>
                    <Grid Height="10" Width="220"><local:ShimmerControl/></Grid>
                </StackPanel>
            </StackPanel>


        </Grid>

        <!-- 3. ACTION BUTTONS -->
        <Grid Grid.Row="2" Padding="16" Background="#161616">
            <StackPanel Spacing="8" Orientation="Horizontal">
                <Button x:Name="PlayButton" Click="PlayButton_Click" Background="White" Foreground="Black" CornerRadius="6" Padding="14,6">
                    <Grid>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,2">
                            <FontIcon x:Name="PlayButtonIcon" Glyph="&#xE768;" FontSize="16" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="PlayButtonText" Text="Oynat" FontWeight="Bold" FontSize="14" LineHeight="14"/>
                                <TextBlock x:Name="PlayButtonSubtext" Text="" FontSize="10" Opacity="0.75" FontWeight="SemiBold" Visibility="Collapsed" Margin="0,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Premium Integrated Progress Bar -->
                        <ProgressBar x:Name="PlaybackProgressBar" 
                                     Maximum="100" 
                                     Height="2" MinHeight="2"
                                     Background="Transparent" 
                                     Foreground="#FF2196F3" 
                                     VerticalAlignment="Bottom"
                                     Margin="-14,0,-14,-6"
                                     Visibility="Collapsed"/>
                    </Grid>
                </Button>
                <Button x:Name="DetailsButton" Click="DetailsButton_Click" Background="#22FFFFFF" Foreground="White" CornerRadius="6" Padding="12,8">
                    <FontIcon Glyph="&#xE946;" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/> 
                </Button>
                <Button x:Name="FavButton" Click="FavButton_Click" Background="#22FFFFFF" Foreground="White" CornerRadius="6" Padding="12,8">
                    <FontIcon Glyph="&#xE710;" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/> 
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Ambience Glow -->
        <Grid x:Name="AmbienceGrid" IsHitTestVisible="False" Opacity="0.12">
             <Grid.Background>
                 <RadialGradientBrush Center="0.5,0.2" GradientOrigin="0.5,0.2" RadiusX="1" RadiusY="1">
                     <GradientStop Color="Azure" Offset="0"/>
                     <GradientStop Color="Transparent" Offset="1"/>
                 </RadialGradientBrush>
             </Grid.Background>
        </Grid>
    </Grid>
</UserControl>
