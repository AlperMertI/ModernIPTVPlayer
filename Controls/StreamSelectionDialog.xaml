<ContentDialog
    x:Class="ModernIPTVPlayer.Controls.StreamSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:stremio="using:ModernIPTVPlayer.Models.Stremio"
    mc:Ignorable="d"
    Title="Kaynak Seçimi"
    CloseButtonText="İptal"
    DefaultButton="Primary"
    RequestedTheme="Dark">

    <ContentDialog.Resources>
        <Style TargetType="ListViewItem">
             <Setter Property="Padding" Value="0"/>
             <Setter Property="Margin" Value="0,4"/>
             <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Oynatmak istediğiniz kaliteyi seçin:" Margin="0,0,0,12" Opacity="0.7"/>

        <ListView x:Name="StreamListView" Grid.Row="1" SelectionMode="Single" MaxHeight="300" SelectionChanged="StreamListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="stremio:StremioStream">
                    <Grid Padding="12,16" Background="#15FFFFFF" CornerRadius="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{x:Bind Name}" FontSize="12" Opacity="0.6"/>
                        </StackPanel>
                        
                        <FontIcon Grid.Column="1" Glyph="&#xE768;" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/> 
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing x:Name="LoadingRing" IsActive="True" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="ErrorText" Grid.Row="1" Text="Kaynak bulunamadı." Foreground="IndianRed" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</ContentDialog>
