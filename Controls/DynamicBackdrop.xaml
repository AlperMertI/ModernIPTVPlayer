<UserControl
    x:Class="ModernIPTVPlayer.Controls.DynamicBackdrop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsHitTestVisible="False">

    <Grid x:Name="BackdropContainer">
        <!-- Layer 1: Large Diffuse Ambient -->
        <Grid x:Name="AmbientLayer" Opacity="0.25">
            <Grid.Background>
                <RadialGradientBrush Center="0.0,0.0" RadiusX="1.2" RadiusY="1.0" GradientOrigin="0.0,0.0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>
        
        <!-- Layer 2: Primary Concentrated Glow -->
        <Grid x:Name="PrimaryGlowLayer" Opacity="0.45">
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.3" RadiusX="0.9" RadiusY="0.7" GradientOrigin="0.5,0.3">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>
        
        <!-- Layer 3: Bloom Accent -->
        <Grid x:Name="BloomLayer" Opacity="0.15">
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.1" RadiusX="0.7" RadiusY="0.5" GradientOrigin="0.5,0.1">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>

        <!-- Layer 4: Floating Accent (subtle) -->
        <Grid x:Name="FloatingAccentLayer" Opacity="0.15">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="FloatingTransform"/>
            </Grid.RenderTransform>
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="0.6" RadiusY="0.4" GradientOrigin="0.5,0.5">
                    <GradientStop x:Name="FloatingStop" Color="Transparent" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>
    </Grid>
</UserControl>
