<UserControl
    x:Class="ModernIPTVPlayer.Controls.CatalogRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ModernIPTVPlayer.Models.Stremio"
    mc:Ignorable="d">

    <StackPanel x:Name="RootPanel" Spacing="16" Margin="48,0,0,24" Opacity="0"
                PointerEntered="RootPanel_PointerEntered" 
                PointerExited="RootPanel_PointerExited">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="HoverStates">
                <VisualState x:Name="Normal"/>
                <VisualState x:Name="PointerOver">
                    <VisualState.Setters>
                        <Setter Target="ScrollRightButton.Visibility" Value="Visible"/>
                        <Setter Target="ScrollLeftButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel.RenderTransform>
            <TranslateTransform x:Name="EntranceTranslation" Y="40"/>
        </StackPanel.RenderTransform>
        
        <TextBlock x:Name="RowTitle" Text="{x:Bind CatalogName, Mode=OneWay}" FontSize="22" FontWeight="Bold" Foreground="White" CharacterSpacing="20"/>
        

        <Grid x:Name="ListContainer">
            <!-- Shimmer State -->
            <StackPanel x:Name="ShimmerPanel" Orientation="Horizontal" Visibility="Collapsed">
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
                 <local:ShimmerCard Width="160" Height="240" Margin="0,0,16,0"/>
            </StackPanel>

            <ListView x:Name="ItemsListView" 
                      ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                      ScrollViewer.HorizontalScrollMode="Disabled" 
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                      ScrollViewer.IsHorizontalRailEnabled="False"
                      ScrollViewer.VerticalScrollMode="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      ScrollViewer.IsVerticalRailEnabled="True"
                      ManipulationMode="TranslateX,System"
                      ManipulationStarted="ItemsListView_ManipulationStarted"
                      ManipulationDelta="ItemsListView_ManipulationDelta"
                      ManipulationCompleted="ItemsListView_ManipulationCompleted"
                      SelectionMode="None"
                      IsItemClickEnabled="False"
                      ElementSoundMode="Off">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,16,0"/>
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid x:Name="Root" Background="Transparent">
                                         <ContentPresenter />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:StremioMediaStream">
                        <local:PosterCard ImageUrl="{x:Bind PosterUrl, Mode=OneWay}" Width="160" Height="240" 
                                          HoverStarted="PosterCard_HoverStarted" 
                                          HoverEnded="PosterCard_HoverEnded"
                                          Tapped="PosterCard_Tapped"
                                          ElementSoundMode="Off"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Navigation Arrows -->
            <Button x:Name="ScrollRightButton" 
                    Click="ScrollRight_Click"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,12,0"
                    Style="{StaticResource VortexButtonStyle}" 
                    Width="48" Height="48" 
                    Padding="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Canvas.ZIndex="100"
                    Visibility="Collapsed">
                <FontIcon Glyph="&#xE761;" FontSize="18"/>
            </Button>
            
            <Button x:Name="ScrollLeftButton" 
                    Click="ScrollLeft_Click"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Margin="-24,0,0,0"
                    Style="{StaticResource VortexButtonStyle}" 
                    Width="48" Height="48" 
                    Padding="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Canvas.ZIndex="100"
                    Visibility="Collapsed">
                <FontIcon Glyph="&#xE760;" FontSize="18"/>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
