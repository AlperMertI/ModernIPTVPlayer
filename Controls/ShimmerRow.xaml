<UserControl
    x:Class="ModernIPTVPlayer.Controls.ShimmerRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="64">
    
    <UserControl.Resources>
        <Storyboard x:Name="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Opacity" From="0.3" To="0.8" Duration="0:0:0.8"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        
        <!-- Poster Placeholder -->
        <Rectangle Fill="#22FFFFFF" RadiusX="4" RadiusY="4" Width="42" Height="60"/>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0" Spacing="8">
             <!-- Title Placeholder -->
            <Rectangle Fill="#22FFFFFF" RadiusX="2" RadiusY="2" Height="16" Width="200" HorizontalAlignment="Left"/>
             <!-- Meta Placeholder -->
            <Rectangle Fill="#15FFFFFF" RadiusX="2" RadiusY="2" Height="12" Width="120" HorizontalAlignment="Left"/>
        </StackPanel>
        
        <!-- Badge Placeholder -->
        <Rectangle Grid.Column="2" Fill="#15FFFFFF" RadiusX="4" RadiusY="4" Height="20" Width="50" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
