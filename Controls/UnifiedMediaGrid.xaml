<UserControl
    x:Class="ModernIPTVPlayer.Controls.UnifiedMediaGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ModernIPTVPlayer.Models"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="MediaCardStyle" TargetType="GridViewItem">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="CanDrag" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <Grid Background="Transparent" CornerRadius="12">
                            <ContentPresenter x:Name="ContentPresenter"
                                Content="{TemplateBinding Content}"
                                ContentTransitions="{TemplateBinding ContentTransitions}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Media Grid -->
        <GridView x:Name="MediaGridView" 
                  SelectionMode="Single" 
                  IsItemClickEnabled="True" 
                  ItemClick="MediaGridView_ItemClick"
                  Padding="24,0,24,36"
                  ItemContainerStyle="{StaticResource MediaCardStyle}">
            
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="100" IsStaggeringEnabled="True"/>
                </TransitionCollection>
            </GridView.ItemContainerTransitions>

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <GridView.ItemTemplate>
                <DataTemplate>
                    <local:PosterCard 
                        ImageUrl="{Binding PosterUrl}" 
                        Width="200" 
                        Height="300"
                        ColorsExtracted="PosterCard_ColorsExtracted"
                        HoverStarted="Card_HoverStarted"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <!-- Skeleton Loading State -->
        <GridView x:Name="SkeletonGrid" 
                  Padding="24,0,24,36"
                  Visibility="Collapsed"
                  IsHitTestVisible="False">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <local:ShimmerCard Margin="8"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <!-- Flying Panel Overlay -->
        <Canvas x:Name="OverlayCanvas">
            <local:ExpandedCard x:Name="ActiveExpandedCard" 
                              Visibility="Collapsed" 
                              PlayClicked="ExpandedCard_PlayClicked"
                              DetailsClicked="ExpandedCard_DetailsClicked"
                              AddListClicked="ExpandedCard_AddListClicked"
                              PointerExited="ActiveExpandedCard_PointerExited"/>
        </Canvas>
    </Grid>
</UserControl>
