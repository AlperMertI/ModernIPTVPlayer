<ContentDialog
    x:Class="ModernIPTVPlayer.Controls.ChannelSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Yayın Ekle"
    PrimaryButtonText="Ekle"
    CloseButtonText="İptal"
    DefaultButton="Primary"
    RequestedTheme="Dark">

    <Grid MinWidth="400" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <AutoSuggestBox x:Name="SearchBox" 
                        PlaceholderText="Kanal Ara..." 
                        QueryIcon="Find"
                        TextChanged="SearchBox_TextChanged" 
                        Margin="0,0,0,10"/>

        <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Top" Margin="0,-5,0,0" />

        <ListView x:Name="ChannelList" Grid.Row="1" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Width="32" Height="32" VerticalAlignment="Center" Stretch="Uniform" Margin="0,0,10,0">
                             <Image.Source>
                                <BitmapImage UriSource="{Binding IconUrl}" DecodePixelWidth="32" />
                            </Image.Source>
                        </Image>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding StreamId}" FontSize="10" Opacity="0.6" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <TextBlock x:Name="StatusText" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5" Text="Kanallar Yükleniyor..." />
    </Grid>
</ContentDialog>
