<UserControl
    x:Class="ModernIPTVPlayer.Controls.StreamCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="QualityBadgeStyle" TargetType="Border">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" Height="80" Margin="0,0,12,12" Background="Transparent" PointerEntered="RootGrid_PointerEntered" PointerExited="RootGrid_PointerExited">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="HoverStates">
                <VisualState x:Name="Normal">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="PointerOver">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0.1" Duration="0:0:0.2"/>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Border CornerRadius="12" Background="#1AFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="1">
            <Grid Padding="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon/Type -->
                <Viewbox Width="24" Height="24" Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE9F5;" Foreground="#88FFFFFF"/> <!-- Server Icon -->
                </Viewbox>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                    <TextBlock x:Name="TitleText" Text="Loading..." FontSize="14" FontWeight="SemiBold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock x:Name="AddonText" Text="Addon Name" FontSize="11" Foreground="#88FFFFFF"/>
                        <TextBlock x:Name="SizeText" Text="24 GB" FontSize="11" Foreground="#44FFFFFF"/>
                    </StackPanel>
                </StackPanel>

                <!-- Badges -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border x:Name="QualityBadge" Style="{StaticResource QualityBadgeStyle}" Visibility="Collapsed">
                         <TextBlock x:Name="QualityText" FontSize="10" FontWeight="Bold"/>
                    </Border>
                    <FontIcon Glyph="&#xE768;" FontSize="14" Foreground="#AAFFFFFF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hover Overlay -->
        <Border x:Name="HoverOverlay" Background="White" Opacity="0" CornerRadius="12"/>
    </Grid>
</UserControl>
