<Page
    x:Class="ModernIPTVPlayer.Pages.SearchResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernIPTVPlayer.Pages"
    xmlns:controls="using:ModernIPTVPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Results -->
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Padding="24,24,24,12">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="BackButton" Click="BackButton_Click" Background="Transparent" BorderThickness="0" Padding="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="18"/>
                </Button>
                <TextBlock x:Name="PageTitle" Text="Arama Sonuçları" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Results Grid -->
        <GridView x:Name="ResultsGrid" Grid.Row="1"
                  SelectionMode="Single"
                  IsItemClickEnabled="True"
                  ItemClick="ResultsGrid_ItemClick"
                  Padding="24,12">
            
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,12,24"/>
                </Style>
            </GridView.ItemContainerStyle>

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="160">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="240"/> <!-- Poster -->
                            <RowDefinition Height="Auto"/> <!-- Meta -->
                        </Grid.RowDefinitions>
                        
                        <!-- Poster -->
                        <Border CornerRadius="8" Background="#1AFFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1">
                            <Image Source="{Binding PosterUrl}" Stretch="UniformToFill"/>
                        </Border>
                        
                        <!-- Badge/Type (Optional overlay) -->
                        <Border Background="#CC000000" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" CornerRadius="4" Padding="6,2">
                            <TextBlock Text="{Binding Rating}" FontSize="11" FontWeight="Bold" Foreground="#FFD700"/>
                        </Border>

                        <!-- Title & Info -->
                        <StackPanel Grid.Row="1" Margin="0,12,0,0">
                            <TextBlock Text="{Binding Title}" 
                                       Foreground="White" FontSize="14" FontWeight="SemiBold" 
                                       TextTrimming="CharacterEllipsis" MaxLines="2"  TextWrapping="Wrap"
                                       HorizontalAlignment="Left"/>
                            
                            <!-- Sub-info -->
                            <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,4,0,0" Opacity="0.7">
                                <TextBlock Text="{Binding Type}" FontSize="12" Foreground="#CCCCCC"/>
                                <!--<TextBlock Text="•" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{Binding Year}" FontSize="12" Foreground="#CCCCCC"/>-->
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <!-- Loading -->
        <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        
        <!-- Empty State (handled by UnifiedMediaGrid mostly, but explicit check good) -->
        <StackPanel x:Name="EmptyPanel" Grid.Row="1" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
            <FontIcon Glyph="&#xE773;" FontSize="48" Foreground="#44FFFFFF"/>
            <TextBlock Text="Sonuç Bulunamadı" FontSize="18" Foreground="#88FFFFFF"/>
        </StackPanel>
    </Grid>
</Page>
