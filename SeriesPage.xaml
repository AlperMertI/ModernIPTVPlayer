<Page
    x:Class="ModernIPTVPlayer.SeriesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ModernIPTVPlayer"
    xmlns:controls="using:ModernIPTVPlayer.Controls"
    mc:Ignorable="d" 
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <ThemeShadow x:Key="SharedShadow"/>
        
        <Style x:Key="SeriesCardStyle" TargetType="GridViewItem">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="CanDrag" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <Grid Background="Transparent" CornerRadius="12">
                            <ContentPresenter x:Name="ContentPresenter"
                                Content="{TemplateBinding Content}"
                                ContentTransitions="{TemplateBinding ContentTransitions}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1100" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainSplitView.DisplayMode" Value="Overlay"/>
                        <Setter Target="MainSplitView.IsPaneOpen" Value="False"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Dynamic Backdrop -->
        <controls:DynamicBackdrop x:Name="BackdropControl" />
        
        <!-- Vignette -->
        <Rectangle Fill="#15000000" IsHitTestVisible="False"/>

        <SplitView x:Name="MainSplitView"
                   DisplayMode="Overlay"
                   IsPaneOpen="False"
                   CompactPaneLength="0"
                   OpenPaneLength="320"
                   PaneBackground="#0F131C"
                   LightDismissOverlayMode="On">
            
            <!-- SIDEBAR (IPTV Library Mode) -->
            <SplitView.Pane>
                <Grid>
                    <Grid.Background>
                        <AcrylicBrush TintColor="#0F131C" TintOpacity="0.85" FallbackColor="#0F131C"/>
                    </Grid.Background>
                    
                    <Grid BorderBrush="#1FFFFFFF" BorderThickness="0,0,1,0" Padding="0,24,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
    
                        <!-- Title -->
                        <Grid Height="60" VerticalAlignment="Top" Padding="24,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="DİZİLER" FontSize="28" FontWeight="ExtraBold" VerticalAlignment="Center" CharacterSpacing="50">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#CCCCCC" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>

                            <Button Grid.Column="1" Click="SearchButton_Click" Background="Transparent" BorderThickness="0" Padding="8" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE721;" FontSize="20" Foreground="White"/>
                            </Button>
                        </Grid>
    
                        <!-- Search -->
                        <Grid Grid.Row="1" Padding="20,12">
                            <Border x:Name="SearchPillBorder" CornerRadius="18" Background="#0AFFFFFF" BorderBrush="#1FFFFFFF" BorderThickness="1" Height="36">
                                <Grid VerticalAlignment="Stretch" Background="Transparent">
                                    <FontIcon Glyph="&#xE721;" FontSize="13" Foreground="White" Opacity="0.5" 
                                              HorizontalAlignment="Left" VerticalAlignment="Center" 
                                              Margin="12,0,0,0" IsHitTestVisible="False"/>
                                    <TextBox x:Name="CategorySearchBox" 
                                             PlaceholderText="Kategori Ara..." 
                                             BorderThickness="0" Background="Transparent" 
                                             Foreground="White" PlaceholderForeground="#80FFFFFF" FontSize="13" 
                                             VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                                             Padding="34,8,12,0"
                                             HorizontalAlignment="Stretch"
                                             TextChanged="CategorySearch_TextChanged"/> 
                                </Grid>
                            </Border>
                        </Grid>
    
                        <!-- Iptv Categories -->
                        <ListView x:Name="IptvCategoryList" Grid.Row="2" 
                                  SelectionMode="Single" 
                                  ItemClick="CategoryListView_ItemClick" 
                                  IsItemClickEnabled="True"
                                  Padding="12,8"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="CornerRadius" Value="6"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Padding" Value="12,6"/>
                                    <Setter Property="MinHeight" Value="36"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Grid x:Name="Root" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="PointerOver">
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" To="#15FFFFFF" Duration="0:0:0.1"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Selected">
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" To="#1FFFFFFF" Duration="0:0:0.1"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Rectangle x:Name="SelectionIndicator" Fill="{ThemeResource SystemAccentColor}" RadiusX="2" RadiusY="2" Opacity="0" Height="16" VerticalAlignment="Center"/>
                                                    <ContentPresenter Grid.Column="1" Margin="8,0,0,0"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CategoryName}" FontSize="14" FontWeight="Medium" Opacity="0.85" TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </SplitView.Pane>

            <!-- CONTENT AREA -->
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="Auto"/> <!-- Stremio Filters (Visible only in Stremio) -->
                        <RowDefinition Height="*"/>    <!-- Media Grid -->
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <Grid Padding="24,24,36,12" Canvas.ZIndex="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/> <!-- Title/Toggle -->
                            <ColumnDefinition Width="*"/>    <!-- Center: Switcher -->
                            <ColumnDefinition Width="Auto"/> <!-- Right Actions -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Sidebar Toggle (IPTV) OR Title (Stremio) -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                             <Button x:Name="SidebarToggle" Click="ToggleSidebar_Click" Background="Transparent" BorderThickness="0" Width="48" Height="48" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE700;" FontSize="20" Foreground="White"/>
                            </Button>
                        </StackPanel>
                        
                        <!-- Center: Source Switcher -->
                        <StackPanel x:Name="SourceSwitcherPanel" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" 
                                    Background="#15FFFFFF" Padding="4" CornerRadius="20" VerticalAlignment="Center">
                            
                            <RadioButton x:Name="SourceIPTV" Content="Kütüphanem" 
                                         Style="{StaticResource PillRadioButtonStyle}" 
                                         IsChecked="False" 
                                         Checked="Source_Checked" Tag="IPTV"/>
                            
                            <RadioButton x:Name="SourceStremio" Content="Stremio" 
                                         Style="{StaticResource PillRadioButtonStyle}" 
                                         IsChecked="True"
                                         Checked="Source_Checked" Tag="Stremio"/>
                        </StackPanel>

                        <!-- Right: Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16">
                             <Button x:Name="SearchButton" Click="SearchButton_Click" Background="Transparent" BorderThickness="0" Width="40" Height="40" Padding="0" Visibility="Visible">
                                 <FontIcon Glyph="&#xE721;" FontSize="16" Foreground="White" Opacity="0.8"/>
                             </Button>
                             <controls:DownloadStatusButton />
                        </StackPanel>
                    </Grid>

                    <!-- MEDIA CONTENT AREA -->
                    <!-- 1. IPTV Grid (Standard) -->
                    <controls:UnifiedMediaGrid x:Name="MediaGrid" Grid.Row="2" Margin="0" Visibility="Visible" />

                    <!-- 2. STREMIO HOME (Hero + Rows) -->
                    <controls:StremioDiscoveryControl x:Name="StremioControl" Grid.Row="0" Grid.RowSpan="3" Visibility="Collapsed" 
                                                      Canvas.ZIndex="0"/>
                    
                    <!-- Loading Indicator (Legacy, can be hidden if shimmer is enough) -->
                    <ProgressRing x:Name="LoadingRing" Grid.Row="2" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <!-- Flying Panel Overlay (For Stremio) -->
                    <Canvas x:Name="OverlayCanvas" Grid.Row="0" Grid.RowSpan="3">
                        <Rectangle x:Name="CinemaScrim" Fill="#FF000000" Opacity="0" Visibility="Collapsed" IsHitTestVisible="False" Canvas.ZIndex="0"/>
                        <controls:ExpandedCard x:Name="ActiveExpandedCard" Visibility="Collapsed" IsHitTestVisible="True" Canvas.ZIndex="1"/>
                    </Canvas>

                    <!-- Spotlight Search Overlay -->
                    <controls:SpotlightSearchControl x:Name="SpotlightSearch" Grid.Row="0" Grid.RowSpan="3" 
                                                     Visibility="Collapsed" Canvas.ZIndex="999"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
